<div class="bg-white">
   <div class="mx-auto max-w-2xl px-4 py-16 sm:px-6 sm:py-24 lg:max-w-7xl lg:px-8">
      <% if @resources.any? %>
         <div class="mt-6 grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-4 xl:gap-x-8">
            <% @resources.each do |resource| %>
               <%= render 'resources/card', resource: resource, remove: false, hide_available: false  %>
            <% end %>
         </div>
      <% else %>
         <p class="text-gray-500 text-center">No resources found matching your search.</p>
      <% end %>
   </div>
</div>