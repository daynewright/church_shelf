<div class="mx-auto max-w-2xl px-4 py-6 sm:px-6 lg:max-w-7xl lg:px-8">
  <h1 class="text-2xl font-bold tracking-tight text-gray-900 sm:text-3xl">Edit Profile</h1>

  <div class="mx-auto max-w-7xl lg:flex lg:gap-x-16 lg:px-8">  
  <main class="px-8 py-8 border rounded-md lg:flex-auto my-8">
    <div>
      <%= form_with model: @profile, url: profile_path, class:'mt-6 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6' do |f| %>
        <div class="col-span-full">
          <%= f.label :picture, class:'block text-sm font-medium leading-6 text-gray-900' %>
          <div class="flex gap-4 items-center">
            <% if @profile.picture.attached? %>
              <%= image_tag @profile.picture, class: "h-16 w-16 rounded-full object-cover" %>
            <% else %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 rounded-full text-gray-400" viewBox="0 0 24 24" fill="currentColor">
                <path d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" />
              </svg>
            <% end %>
            <%= f.file_field :picture, class:'font-medum text-primary' %>
          </div>
        </div>

        <div class="sm:col-span-3">
          <%= f.label :first_name, class:'block text-sm font-medium leading-6 text-gray-900' %>
          <%= f.text_field :first_name, class: 'mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-gray-900 sm:text-sm sm:leading-6' %>
        </div>

        <div class="sm:col-span-3">
          <%= f.label :last_name, class:'block text-sm font-medium leading-6 text-gray-900' %>
          <%= f.text_field :last_name, class: 'mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-gray-900 sm:text-sm sm:leading-6' %>
        </div>

        <div class="col-span-full">
          <%= f.label :address_1, class:'block text-sm font-medium leading-6 text-gray-900' %>
          <%= f.text_field :address_1, class: 'mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-gray-900 sm:text-sm sm:leading-6' %>
        </div>

        <div class="sm:col-span-4">
          <%= f.label :address_2, class:'block text-sm font-medium leading-6 text-gray-900' %>
          <%= f.text_field :address_2, class: 'mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-gray-900 sm:text-sm sm:leading-6' %>
        </div>

        <div class="sm:col-span-2">
          <%= f.label :city, class:'block text-sm font-medium leading-6 text-gray-900' %>
          <%= f.text_field :city, class: 'mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-gray-900 sm:text-sm sm:leading-6' %>
        </div>

        <div class="sm:col-span-2">
          <%= f.label :state, class:'block text-sm font-medium leading-6 text-gray-900' %>
          <%= f.text_field :state, class: 'mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-gray-900 sm:text-sm sm:leading-6' %>
        </div>

        <div class="sm:col-span-2">
          <%= f.label :country, class:'block text-sm font-medium leading-6 text-gray-900' %>
          <%= f.text_field :country, class: 'mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-gray-900 sm:text-sm sm:leading-6' %>
        </div>

        <div class="col-span-full">
          <%= f.submit "Save", class:"cursor-pointer mt-2 flex items-center justify-center rounded-md border border-transparent bg-primary px-8 py-3 text-base font-medium text-white hover:bg-primary-dark focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2" %>
        </div>
      <% end %>
    </div>
  </main>
</div>
</div>